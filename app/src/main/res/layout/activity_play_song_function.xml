<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.HomeActivity.playSongFunction">

    <ImageView
        android:id="@+id/songImage_imageView_songPlay"
        android:layout_width="141dp"
        android:layout_height="146dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/imageUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songImage_imageView_songPlay">

        <SeekBar
            android:id="@+id/remainingTime_SeekBar_playSong"
            android:layout_width="300dp"
            android:layout_height="34dp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="281dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/elapsedTimeLabel_TextView_playSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:5"
            android:textColor="#699ECC">

        </TextView>
        
        <TextView
            android:layout_width="220dp"
            android:layout_height="match_parent"></TextView>

        <TextView
            android:id="@+id/remainingTimeLabel_TextView_playSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-0:12"
            android:textColor="#699ECC">

        </TextView>

    </LinearLayout>

    <Button
        android:id="@+id/playButton_Button_playSong"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playButton_Button_playSong">

        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/sound">

        </ImageView>

        <SeekBar
            android:id="@+id/volumnSeekBar_playSong"
            android:layout_width="300dp"
            android:layout_height="wrap_content"></SeekBar>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/sound"></ImageView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
